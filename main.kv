<FontMergerApp>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Label:
            text: 'تطبيق دمج الخطوط'
            font_size: '24sp'
            size_hint_y: None
            height: self.texture_size[1] + 20

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            spacing: 10

            Button:
                text: 'اختر الخط 1'
                on_press: app.open_font1()
            Label:
                text: app.font1_path or 'لم يتم اختيار أي خط'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            spacing: 10

            Button:
                text: 'اختر الخط 2'
                on_press: app.open_font2()
            Label:
                text: app.font2_path or 'لم يتم اختيار أي خط'

        Button:
            text: 'دمج الخطوط'
            size_hint_y: None
            height: '48dp'
            on_press: app.merge_fonts()

        Label:
            id: status_label
            text: ''
            color: 0, 0.5, 0, 1
